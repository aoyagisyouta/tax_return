<h1>収支一覧</h1>

<% if @incomes.any? %>
  <table>
    <thead>
      <tr>
        <th>年</th>
        <th>月</th>
        <th>家賃</th>
        <th>礼金</th>
        <th>その他の収入</th>
        <th>月毎合計収入</th>
        <th>年毎合計収入</th>
      </tr>
    </thead>
    <tbody>
      <%year_sum = 0%>
      <% @incomes.each do |income| %>
        <tr>
          <td><%= income.year %></td>
          <td><%= income.month %></td>
          <td><%= income.rent %></td>
          <td><%= income.key_money %></td>
          <td><%= income.other_income %></td>
          <td><%= mouns_sum = income.rent + income.key_money + income.other_income%></td>
        
        <%year_sum += mouns_sum%>
      <% end %>
      <td><%= year_sum%><td>
      </tr>
    </tbody>
  </table>
<% else %>
  <p>収支がありません。</p>
<% end %>

